<div 
  data-terminal-modal-target="modal" 
  class="hidden fixed inset-0 z-50 flex-col bg-gray-950 text-green-400 font-mono p-4 md:p-8 animate-fade-in"
>
  <div class="flex items-center justify-end mb-4 border-green-900/50">
    <%= render "shared/button", variant: :danger, data: { action: "click->terminal-modal#close" } do %>
      Close
    <% end %>
  </div>
  
  <div class="flex-1 overflow-auto bg-black/50 p-6 rounded-3xl border border-green-900/30 shadow-inner">
    <pre class="whitespace-pre-wrap break-words text-sm md:text-base leading-relaxed"><%= text %></pre>
  </div>
</div>
