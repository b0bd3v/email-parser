<div class="flex items-center justify-between">
  <div>
    <h1><%= title %></h1>
    <p class="text-gray-400 mt-1"><%= description %></p>
  </div>
  <% if new_path %>
    <%= link_to new_path, class: "inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-all shadow-lg shadow-blue-500/30 transform hover:-translate-y-0.5" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
      <%= new_text %>
    <% end %>
  <% end %>
</div>