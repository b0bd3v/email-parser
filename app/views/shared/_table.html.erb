<div class="w-full bg-gray-900/40 backdrop-blur-xl border border-white/10 rounded-3xl shadow-2xl overflow-hidden flex flex-col transition-all duration-500 hover:shadow-[0_8px_32px_0_rgba(0,0,0,0.5)] group/table">
  <% if local_assigns[:title] %>
    <div class="px-8 py-6 border-b border-white/5 flex justify-between items-center bg-gray-900/20">
      <h2 class="text-xl font-bold text-white tracking-tight flex items-center gap-3">
        <span class="w-1.5 h-6 rounded-full bg-gradient-to-b from-blue-500 to-purple-500 shadow-[0_0_10px_rgba(59,130,246,0.5)]"></span>
        <%= title %>
      </h2>
    </div>
  <% end %>

  <div class="overflow-x-auto">
    <table class="w-full text-left border-collapse">
      <thead>
        <tr class="text-xs uppercase tracking-widest text-gray-400 bg-gray-900/20 border-b border-white/5">
          <th scope="col"></th>
          <% columns.each do |col| %>
            <th scope="col" class="px-6 py-5 font-bold">
              <%= col[:header] %>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody class="divide-y divide-white/5">
        <% if items.any? %>
          <% items.each do |item| %>
            <tr class="group hover:bg-white/5 transition-all duration-300 ease-out relative">
              <!-- Hover Gradient Strip -->
              <td class="absolute inset-y-0 left-0 w-1 bg-gradient-to-b from-blue-500 to-purple-500 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-r shadow-[0_0_10px_rgba(59,130,246,0.5)]"></td>

              <% columns.each do |col| %>
                <td class="px-6 py-5 whitespace-nowrap text-sm text-gray-300 group-hover:text-white transition-colors duration-300">
                  <% if col[:proc] %>
                    <%= col[:proc].call(item) %>
                  <% else %>
                    <%= item.public_send(col[:method]) %>
                  <% end %>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="<%= columns.length %>" class="px-6 py-16 text-center text-gray-500">
              <div class="flex flex-col items-center justify-center">
                <div class="p-4 rounded-full bg-gray-800/30 mb-4 animate-pulse border border-white/5">
                  <svg class="w-10 h-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                  </svg>
                </div>
                <p class="text-lg font-medium text-gray-400"><%= t('component.table.no_records_found') %></p>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if items.respond_to?(:total_pages) && items.total_pages > 1 %>
    <div class="px-6 py-5 border-t border-white/5 bg-gray-900/20 flex justify-end">
      <%= paginate items %>
    </div>
  <% end %>
</div>
