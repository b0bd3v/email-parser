<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if page.current? %>
  <span aria-current="page" class="relative z-10 inline-flex items-center justify-center w-8 h-8 text-sm font-bold text-white bg-white/10 border border-white/20 rounded-lg shadow-lg backdrop-blur-sm transform scale-105 transition-all duration-300">
    <%= page %>
  </span>
<% else %>
  <a href="<%= url %>" rel="next" class="relative inline-flex items-center justify-center w-8 h-8 text-sm font-medium text-gray-400 rounded-lg hover:text-white hover:bg-white/5 hover:border-white/10 border border-transparent transition-all duration-300 ease-out">
    <%= page %>
  </a>
<% end %>
