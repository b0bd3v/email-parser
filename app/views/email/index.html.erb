<div class="space-y-6">
  <div class="flex items-center justify-between">
    <div>
      <h1 class="text-3xl font-bold text-white tracking-tight">Emails</h1>
      <p class="text-gray-400 mt-1">Manage and view your uploaded email files.</p>
    </div>
    <%= link_to new_email_path, class: "inline-flex items-center justify-center px-5 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-xl transition-all shadow-lg shadow-blue-500/30 transform hover:-translate-y-0.5" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path></svg>
      Upload New
    <% end %>
  </div>

  <%= render "shared/table", 
      title: "All Emails",
      items: @emails,
      columns: [
        { header: "ID", method: :id },
        { header: "File Name", proc: ->(email) { 
            content_tag(:div, class: "flex items-center space-x-2") do
              concat content_tag(:span, nil, class: "w-2 h-2 rounded-full bg-blue-400")
              concat content_tag(:span, email.file.filename.to_s, class: "font-mono text-gray-300")
            end
          } 
        },
        { header: "Date", proc: ->(email) { email.created_at.strftime("%b %d, %Y") } },
        { header: "Uploaded", proc: ->(email) { "#{time_ago_in_words(email.created_at)} ago" } },
        { header: "Actions", proc: ->(email) {
            link_to "View Details", email_path(email), class: "text-indigo-400 hover:text-indigo-300 hover:underline font-medium"
          } 
        }
      ]
  %>
</div>
