<div class="space-y-6" data-controller="terminal-modal">
  <%= render "shared/page_title", 
             title: t("email_parse_log_controller.title"), 
             description: t("email_parse_log_controller.manage_and_view_your_email_parse_logs"),
             new_path: new_email_path,
             new_text: t("email_parse_log_controller.upload_new") %>
  
  <%= render layout: "shared/card" do %>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 md:gap-12">
      <!-- File Information Column -->
      <div class="space-y-6">
        <h2 class="text-xl font-semibold text-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-3 text-blue-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
          </svg>
          <%= t("email_parse_log_controller.file_information") %>
        </h2>
        
        <div class="space-y-4 pl-4 border-l-2 border-gray-800 ml-2.5">
          <div class="pl-4 group/item">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1"><%= t("email_parse_log_controller.filename") %></label>
            <div class="flex items-center text-gray-300 group-hover/item:text-white transition-colors">
              <span class="text-lg"><%= @email_parse_log.file_name %></span>
            </div>
          </div>

          <div class="pl-4 group/item">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1"><%= t("email_parse_log_controller.processed_at") %></label>
            <div class="flex items-center text-gray-300 group-hover/item:text-white transition-colors">
              <span class="text-lg"><%= @email_parse_log.created_at.strftime("%d/%m/%Y %H:%M") %></span>
            </div>
          </div>
        </div>
      </div>

      <!-- Processing Information Column -->
      <div class="space-y-6">
        <h2 class="text-xl font-semibold text-gray-200 flex items-center">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-3 text-purple-500">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12h3.75M9 15h3.75M9 18h3.75m3 .75H18a2.25 2.25 0 002.25-2.25V6.108c0-1.135-.845-2.098-1.976-2.192a48.424 48.424 0 00-1.123-.08m-5.801 0c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m0 0H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V9.375c0-.621-.504-1.125-1.125-1.125H8.25zM6.75 12h.008v.008H6.75V12zm0 3h.008v.008H6.75V15zm0 3h.008v.008H6.75V18z" />
          </svg>
          <%= t("email_parse_log_controller.processing_details") %>
        </h2>
        
        <div class="space-y-4 pl-4 border-l-2 border-gray-800 ml-2.5">
          <div class="pl-4 group/item">
            <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1"><%= t("email_parse_log_controller.status") %></label>
            <div>
              <%= render "shared/label", text: @email_parse_log.status %>
            </div>
          </div>

          <% if @email_parse_log.customer.present? %>
            <div class="pl-4 group/item">
              <label class="block text-xs font-semibold text-gray-500 uppercase tracking-wider mb-1"><%= t("email_parse_log_controller.customer") %></label>
              <%= link_to @email_parse_log.customer.name, customer_path(@email_parse_log.customer), class: "text-blue-400 hover:text-blue-300 hover:underline transition-colors" %>
            </div>
          <% end %>

          <% if @email_parse_log.error_message.present? %>
            <div class="pl-4 group/item">
              <label class="block text-xs font-semibold text-red-500 uppercase tracking-wider mb-1"><%= t("email_parse_log_controller.error_message") %></label>
              <div class="text-red-400 text-sm leading-relaxed p-2 bg-red-900/10 rounded border border-red-900/20">
                <%= @email_parse_log.error_message %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="mt-8 pt-6 border-t border-gray-800/50 flex justify-center">
      <%= render "shared/button", variant: :ghost, path: "#", data: { action: "click->terminal-modal#open" } do %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5" />
        </svg>
        <%= t("email_parse_log_controller.view_raw_data") %>
      <% end %>
    </div>
  <% end %>

  <%= render "shared/terminal_modal", text: @email_parse_log.raw_data %>
</div>
