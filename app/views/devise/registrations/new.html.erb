<%= render layout: "devise/shared/auth_layout", locals: { 
  title: "Create Account", 
  subtitle: "Join us and start parsing emails today",
  image_title: "Join the Team",
  image_description: "Experience the power of AI-driven email processing and streamline your workflow."
} do %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-5" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div>
      <%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-300" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "bg-gray-800 border border-gray-700 text-white text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-3.5 placeholder-gray-500 transition-colors" %>
    </div>

    <div>
      <%= f.label :password, class: "block mb-2 text-sm font-medium text-gray-300" %>
      <% if @minimum_password_length %>
      <span class="text-xs text-gray-500 mb-1 block">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "bg-gray-800 border border-gray-700 text-white text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-3.5 placeholder-gray-500 transition-colors" %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block mb-2 text-sm font-medium text-gray-300" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "bg-gray-800 border border-gray-700 text-white text-sm rounded-xl focus:ring-blue-500 focus:border-blue-500 block w-full p-3.5 placeholder-gray-500 transition-colors" %>
    </div>

    <div class="pt-2">
      <%= f.submit "Sign up", class: "w-full text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-800 font-semibold rounded-xl text-sm px-5 py-3.5 text-center transition-all shadow-lg shadow-blue-900/30" %>
    </div>
  <% end %>

  <div class="mt-8 text-center text-sm text-gray-500">
    Already have an account? <a href="<%= new_session_path(resource_name) %>" class="font-medium text-blue-400 hover:text-blue-300 hover:underline">Log in</a>
  </div>
<% end %>
